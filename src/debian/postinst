#!/bin/sh
# postinst script for bashlyk
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

 cmd=/usr/bin/bashlyk
path=/usr/share/bashlyk
CONF=/etc/bashlyk/bashlyk.conf
BVER=0

case "$1" in

  configure)

    [ -f ${path}/testunit.sh ] && chmod +x ${path}/testunit.sh

    if [ -x $cmd ]; then

      ln -sf $cmd ${path}/bashlyk || true

      echo "BASHLYK library tests:"
      bashlyk --bashlyk-test

    fi

    if [ -s "$CONF" ]; then

      BVER=$(                                                                  \
      dpkg-query -W -f='${Depends}\n'|grep -Po 'bashlyk.\(>?=?\s?\d+\.\d+.*?\)'\
        | sed -re "s/bashlyk.\(>?=?.?([0-9]*)\.([0-9]*).*\)/\1\2/"             \
        | grep -Po "^\d+$" 2>/dev/null || true                                 \
      )

      if [ -z "$BVER" -o "$BVER" -lt 190 ]; then

        if ! grep '_bashlyk_aLib=.*old.*' $CONF >/dev/null 2>&1; then

          sed -i -re "s/shlyk_aLib=\"(.*)\"\}$/shlyk_aLib=\"\1,old\"\}/g" $CONF || true

        fi

      fi >/dev/null 2>&1

      if [ -z "$BVER" -o "$BVER" -lt 193 ]; then

        if ! grep '_bashlyk_aLib=.*ini.*' $CONF >/dev/null 2>&1; then

          sed -i -re "s/shlyk_aLib=\"(.*)\"\}$/shlyk_aLib=\"\1,ini\"\}/g" $CONF || true

        fi

      fi >/dev/null 2>&1

    fi

    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)

      echo "postinst called with unknown argument \`$1'" >&2
      exit 1

    ;;

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
